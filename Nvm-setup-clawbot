#!/bin/bash

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${GREEN}===============================================${NC}"
echo -e "${GREEN}   ClawBot (OpenClaw) 环境全能修复脚本 V2.0    ${NC}"
echo -e "${GREEN}   支持架构: ARM / x86_64 | 适配: Node v22     ${NC}"
echo -e "${GREEN}===============================================${NC}"

menu() {
    echo -e "\n${YELLOW}请选择操作：${NC}"
    echo -e "1. 【清理】彻底卸载系统旧版 Node.js (解决路径冲突)"
    echo -e "2. 【清空】强力删除 NVM 及所有残留 (环境重置)"
    echo -e "3. 【安装】部署 NVM 与 Node v22 + pnpm (核心环境)"
    echo -e "4. 【部署】一键安装、编译并启动 ClawBot"
    echo -e "0. 退出脚本"
    echo "-----------------------------------------------"
    read -p "请输入数字 [0-4]: " choice

    case $choice in
        1) clean_system_node ;;
        2) deep_purge ;;
        3) install_env ;;
        4) install_clawbot ;;
        0) exit 0 ;;
        *) echo -e "${RED}无效输入，请重新选择${NC}"; menu ;;
    esac
}

# 1. 彻底卸载系统自带 Node
clean_system_node() {
    echo -e "${YELLOW}正在清理系统级 Node.js...${NC}"
    sudo apt-get remove --purge -y nodejs npm
    sudo apt-get autoremove -y
    sudo rm -rf /usr/local/bin/node /usr/local/bin/npm /usr/local/lib/node_modules
    sudo rm -rf /usr/bin/node /usr/bin/npm
    echo -e "${GREEN}系统级环境已清理干净！${NC}"
    menu
}

# 2. 强力清除所有 NVM 残留
deep_purge() {
    echo -e "${RED}警告：这将删除所有已安装的 Node 版本和 NVM 配置！${NC}"
    read -p "确定要重置吗? (y/n): " confirm
    if [ "$confirm" == "y" ]; then
        rm -rf ~/.nvm ~/.npm ~/.pnpm-state
        sed -i '/NVM_DIR/d' ~/.bashrc
        echo -e "${GREEN}环境已完全清空，请重新连接 SSH 或运行 'source ~/.bashrc'。${NC}"
    fi
    menu
}

# 3. 安装 NVM、Node v22 和 pnpm
install_env() {
    echo -e "${YELLOW}正在安装 NVM (Node Version Manager)...${NC}"
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
    
    # 立即激活 NVM
    export NVM_DIR="$HOME/.nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
    
    echo -e "${YELLOW}正在安装 Node v22 (当前最稳定版本)...${NC}"
    nvm install 22
    nvm use 22
    nvm alias default 22
    
    echo -e "${YELLOW}安装全局必备工具 (pnpm & pm2)...${NC}"
    npm install -g pnpm pm2
    
    echo -e "${GREEN}环境就绪！当前版本: $(node -v)${NC}"
    menu
}

# 4. 一键安装、编译并启动 ClawBot
install_clawbot() {
    if [ ! -d "/root/openclaw" ]; then
        echo -e "${RED}错误：未在 /root/openclaw 找到源码。请先确保已下载代码。${NC}"
        menu
        return
    fi

    cd /root/openclaw || exit

    echo -e "${YELLOW}正在安装项目依赖...${NC}"
    # 确保在当前环境下有 pnpm
    npm install -g pnpm
    pnpm install

    echo -e "${YELLOW}正在编译 TypeScript (生成 dist 文件夹)...${NC}"
    pnpm run build

    if [ ! -f ".env" ]; then
        echo -e "${YELLOW}未检测到配置文件，正在从模板创建...${NC}"
        cp .env.example .env
    fi

    echo -e "${GREEN}✅ 编译完成！现在可以启动机器人了。${NC}"
    read -p "是否立即启动配置菜单? (y/n): " run_now
    if [ "$run_now" == "y" ]; then
        npm start
    fi
    menu
}

# 启动菜单
menu